{
  "manifest_version": 3,
  "name": "Oasis Swarm - Sovereign Storage",
  "version": "7.25.0",
  "description": "Turn your browser into a secure node. Store data with Galois Sharding & Tesla Resonance.",
  "author": "Mariano Panzano Caball√©",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Oasis HUD"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage", 
    "unlimitedStorage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "wss://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
